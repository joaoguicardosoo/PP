// Exercicio 4
int main (){
    float x,y;
    printf("Digite um numero: \n");
    scanf("%f", &x);

    if (x >= 1){
        x = x*x;
        printf("O numero ao quadrado eh: %f", x);

        printf("A raiz quadrada do numero eh: %f", x);
    }
    else{
        printf("Numero invalido!");
    }
return 0;

}
