// Exercicio 7
int main (){
    float x, y, diferenca;
    printf("Digite dois numeros separados por espaco: \n");
    scanf("%d %d", &x, &y);
    diferenca = x - y;

    if (x > y){
        printf("O numero maior eh: %d e a diferenca entre eles eh %d", x, diferenca);
    }
    else{
        printf("O numero maior eh: %d e a diferenca entre eles eh %d.", y, diferenca);

    }
return 0;
}
